@model NewTruckWrapper
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <h3><a href="/dashboard">Dashboard</a> | <a href="/newtruck">New Truck</a> | <a href="/newstyle">New Style</a></h3>
            </div>
        </div>
        <div class="row text-center">
            <div class="col h1">Edit @Model.TruckForm.Name</div>
        </div>
        <div class="row">
            <div class="col-sm-3">
            </div>
            <div class="col-sm-6">
                <form asp-action="UpdateTruck" asp-controller="Home" asp-route-TruckId="@Model.TruckForm.FoodTruckId" method="post">
                    <div class="form-group row">
                        <span class="col-sm-12" asp-validation-for="TruckForm.Name"></span>
                        <label class="col-sm-4">Name: </label>
                        <input class="col-sm-8 form-control" asp-for="TruckForm.Name">
                    </div>
                    <div class="form-group row">
                        <span class="col-sm-12" asp-validation-for="TruckForm.Styles"></span>
                        <label class="col-sm-4">Cuisine Types: </label>
                        @for(int i = 0; i < Model.TruckForm.Styles.Count; i++)
                        {
                            <div class="col">
                            <input type="checkbox" asp-for="TruckForm.Styles[i].Selected">
                            @Model.TruckForm.Styles[i].ItemName 
                            </div>
                            <input type="hidden" asp-for="TruckForm.Styles[i].ItemId">
                        }
                        
                    </div>
                    <div class="form-group row">
                        <span class="col-sm-12" asp-validation-for="TruckForm.Description"></span>
                        <label class="col-sm-4">Description: </label>
                        <textarea class="col-sm-8 form-control" asp-for="TruckForm.Description"></textarea>
                    </div>
                    <input type="submit" value="Create Style">
                </form>
            </div>
        </div>
    </div>
    
</body>
</html>